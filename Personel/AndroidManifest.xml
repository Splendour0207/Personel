<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIiaTKLQX8KGBYlJtm_orjiPGWqNbppxZwGByuGA" />

        <activity
            android:name="personel.start.Lunch"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="personel.main.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="personel.start.Loading"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="personel.main.PhotoActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="personel.main.ShowBigPic"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="personel.main.PhotoAlbumActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity android:name="personel.app.LockAppActivity" >
        </activity>
        <activity android:name="personel.app.AppActivity" >
            <intent-filter>
                <action android:name="" />
            </intent-filter>
        </activity>
        <activity
            android:name="personel.app.Gestures_key"
            android:launchMode="singleTask" >
        </activity>
        <activity android:name="personel.app.Gestures_keyforStart" >
        </activity>
        <activity android:name="personel.app.Gestures_keyforChange" >
        </activity>
        <activity android:name="personel.app.Build_gestures" >
        </activity>
        <activity android:name="personel.app.Show" >
        </activity>
        <activity
            android:name="personel.secret.LoginActivity"
            android:clearTaskOnLaunch="true"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:stateNotNeeded="true" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
        <activity
            android:name="personel.secret.SecretsListActivity"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:label="@string/list_name"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="personel.secret.AccessLogActivity"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:label="@string/log_name"
            android:stateNotNeeded="true" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="personel.personolphoto.PPhotoActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="personel.photo.PhotoloadActivity"
            android:label="@string/app_name">
        </activity>
        <!-- android:persistent="true" 将服务设置为系统服务，防止被系统意外回收 -->
        <service
            android:name="personel.app.WatchAppService"
            android:persistent="true" />
        <service android:name="personel.secret.SaveService" >
        </service>
    </application>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 往SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

</manifest>